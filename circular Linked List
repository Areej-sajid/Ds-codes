#include<iostream>
using namespace std;

template<typename T>
class node {
    T data;
    node* next;
public:
    node(T val = 0, node* n = nullptr) {
        data = val;
        next = n;
    }
    T retrieve() const { return data; }
    node* nextnode() const { return next; }
    friend class CSLL<T>;
};

template<typename T>
class CSLL {
    node<T>* head;
    node<T>* tail;
public:
    CSLL() {
        head = nullptr;
        tail = nullptr;
    }

    void push_front(T val) {
        node<T>* new_node = new node<T>(val);

        if (head == nullptr) {
            head = tail = new_node;
            head->next = head;
            return;
        }

        new_node->next = head;
        tail->next = new_node;
        head = new_node;
    }

    void push_back(T val) {
        node<T>* new_node = new node<T>(val);

        if (head == nullptr) {
            head = tail = new_node;
            head->next = head;
            return;
        }

        new_node->next = head;
        tail->next = new_node;
        tail = new_node;
    }

    void pop_front() {
        if (head == nullptr) return;

        if (head == tail) {
            delete head;
            head = tail = nullptr;
        }
        else {
            node<T>* temp = head;
            head = head->next;
            tail->next = head;
            delete temp;
        }
    }

    void pop_end() {
        if (head == nullptr) return;

        if (head == tail) {
            delete head;
            head = tail = nullptr;
        }
        else {
            node<T>* temp = head;
            while (temp->next != tail)
                temp = temp->next;

            temp->next = head;
            delete tail;
            tail = temp;
        }
    }

    void insert_middle(T val, int pos) {
        if (head == nullptr || pos <= 0) {
            push_front(val);
            return;
        }

        node<T>* temp = head;
        for (int i = 0; i < pos - 1; i++) {
            temp = temp->next;
            if (temp == head) {
                cout << "Invalid position!\n";
                return;
            }
        }

        if (temp == tail) {
            push_back(val);
            return;
        }

        node<T>* new_node = new node<T>(val);
        new_node->next = temp->next;
        temp->next = new_node;
    }

    void erase(int pos) {
        if (head == nullptr) {
            cout << "List is empty!" << endl;
            return;
        }

        int totalNodes = count();
        if (pos < 1 || pos > totalNodes) {
            cout << "Invalid position" << endl;
            return;
        }

        if (pos == 1) {
            pop_front();
            return;
        }

        if (pos == totalNodes) {
            pop_end();
            return;
        }

        node<T>* temp = head;
        for (int i = 1; i < pos - 1; i++)
            temp = temp->next;

        node<T>* del = temp->next;
        temp->next = del->next;
        delete del;
    }

    bool empty() const {
        return head == nullptr;
    }

    int count() const {
        if (head == nullptr) return 0;
        int c = 0;
        node<T>* temp = head;
        do {
            c++;
            temp = temp->next;
        } while (temp != head);
        return c;
    }

    int size() const {
        return count();
    }

    T front() const {
        if (empty()) {
            cout << "List empty" << endl;
            return 0;
        }
        return head->retrieve();
    }

    T end() const {
        if (empty()) {
            cout << "List empty" << endl;
            return 0;
        }
        return tail->retrieve();
    }

   void display() const {
        if (head == nullptr) {
            cout << "List is empty" << endl;
            return;
        }

        node<T>* temp = head;

        for (; ; temp = temp->next) {
            cout << temp->retrieve() << " ";
            if (temp->next == head) break;
        }

        cout << endl;
    }
};

int main() {
    CSLL<int> cl;
    cl.push_front(3);
    cl.push_front(2);
    cl.push_front(1);
    cl.push_back(4);
    cl.display();

    cl.insert_middle(7, 2);
    cl.display();
    cl.pop_front();
    cl.display();
    cl.pop_end();
    cl.display();
    cl.erase(2);

    cl.display();

    cout << "Front " << cl.front() << endl;
    cout << "End" << cl.end() << endl;
    cout << "Count " << cl.count() << endl;
}
